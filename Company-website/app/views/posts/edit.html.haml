%h1
  ="Edit #{@post.title}"
%br/
=form_for [@subject, @post] do |f|
  = f.label :title
  %br/
  = f.text_field :title
  %br/
  %br/
  = f.label :body
  %br/
  = f.text_area :body
  %br/
  - @tag.each do |tag|
    = check_box_tag 'post[tag_ids][]', tag.id, @post.tags.include?(tag) 
    = tag.name
    %br/
    %br/
  %br/
  %br/
  =f.submit "Edit"
%hr/
%br/
= link_to "Back", post_subject_post_path(@subject, @post)